<div class="pt-5"></div>
<%= show_form_errors category %>

<%= form_for(category, as: :category, url: category.persisted? ? category_path(category) : categories_path) do |f| %>
  <div class="mb-3">
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control', autocomplete: :off %>
  </div>
  <div class="mb-3">
    <%= f.hidden_field :color, class: 'form-control form-control-color' %>
  </div>
  <%= f.submit nil, class: 'btn btn-primary' %>
  <%= link_to 'Отмена', categories_path, class: 'btn btn-outline-dark' %>
<% end %>
