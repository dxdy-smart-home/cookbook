<div>
  <h2 class="d-inline">Теги</h2>
  <%= link_to '+', new_tag_path, class: 'btn btn-primary btn-sm align-top mx-2' -%>
</div>


<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Название</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% tags.each.with_index(1) do |tag, position| %>
      <tr>
        <th scope="row"><%= position %></th>
        <td><%= tag.name %></td>
        <td>
          <%= link_to 'Редактировать', edit_tag_path(tag), class: 'btn btn-secondary' -%>
          <%= link_to 'Удалить', tag, method: :delete, data: {confirm: 'Вы уверены?'}, class: 'btn btn-danger' -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
